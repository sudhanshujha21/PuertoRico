<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.himmanshoojha.puertorico.MainActivity"
    android:background="@android:color/background_light">

    <TextView
        android:text="Puerto Rico"
        android:layout_width="match_parent"
        android:id="@+id/txt_rp"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:background="@color/colorAccent"
        android:textColor="@android:color/background_light"
        android:layout_height="50dp" />

    <ImageView
        app:srcCompat="@drawable/ic_chevron_left"
        android:layout_above="@+id/Recycler_v"
        android:layout_marginBottom="12dp"
        android:id="@+id/img_rp"
        android:layout_width="50dp"
        android:layout_height="40dp" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:id="@+id/Recycler_v"
        android:layout_marginTop="13dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/txt_rp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
