<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popular_products"
    android:layout_width="match_parent"
    tools:context="com.example.himmanshoojha.puertorico.PopularProducts"
    android:background="@android:color/background_light"
    android:layout_height="match_parent">

    <TextView
        android:text="Popular Products"
        android:layout_width="match_parent"
        android:id="@+id/txt_rp"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:background="@color/colorAccent"
        android:textColor="@android:color/background_light"
        android:layout_height="50dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_chevron_left"
        android:layout_marginBottom="12dp"
        android:id="@+id/img_pp" />

    <RadioButton
        android:text="RadioButton"
        android:id="@+id/radioButton"
        android:checked="true"
        android:textAlignment="center"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txt_rp"
        android:layout_toRightOf="@+id/text1"
        android:layout_toEndOf="@+id/text1"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp" />


    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

        </RadioGroup>

        <RadioButton
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:id="@+id/Full"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/Half"
            android:textColor="@color/colorAccent"
            android:checked="true"
            android:layout_alignLeft="@+id/Half"
            android:layout_alignStart="@+id/Half" />

        <TextView
            android:text="$323.90"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/text9"
            android:textColor="?attr/colorButtonNormal"
            android:textSize="18sp"
            android:layout_above="@+id/Full"
            android:layout_alignLeft="@+id/text8"
            android:layout_alignStart="@+id/text8"
            android:textAlignment="center" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/text10"
            android:text="$489.80"
            android:layout_alignTop="@+id/Full"
            android:layout_alignLeft="@+id/text9"
            android:layout_alignStart="@+id/text9"
            android:textColor="?attr/colorButtonNormal"
            android:textSize="18sp"
            android:textAlignment="center" />

    <TextView
            android:text="Full"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/text7"
            android:textColor="?attr/colorButtonNormal"
            android:textSize="18sp"
            android:textAlignment="viewStart"
            android:layout_above="@+id/textView"
            android:layout_alignLeft="@+id/text6"
            android:layout_alignStart="@+id/text6" />


    <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/text8"
            android:text="$240.95"
            android:textColor="?attr/colorButtonNormal"
            android:textSize="18sp"
        android:layout_alignRight="@+id/text2"
        android:layout_alignEnd="@+id/text2"
        android:layout_alignTop="@+id/text5"
        android:textAlignment="center" />

    <TextView
        android:text="Please Select"
        android:id="@+id/text4"
        android:textColor="?attr/colorButtonNormal"
        android:textSize="24sp"
        android:layout_width="150dp"
        android:layout_below="@+id/text3"
        android:layout_toRightOf="@+id/img_pp"
        android:layout_toEndOf="@+id/img_pp"
        android:layout_height="25dp"
        android:textAlignment="viewStart" />

    <TextView
        android:text="Non-Veg"
        android:layout_width="wrap_content"
        android:id="@+id/text3"
        android:textSize="24sp"
        android:textColor="?attr/colorButtonNormal"
        android:layout_below="@+id/text2"
        android:layout_alignLeft="@+id/text4"
        android:layout_alignStart="@+id/text4"
        android:layout_height="25dp"
        android:textAlignment="viewStart" />

    <RadioButton
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:id="@+id/Half"
        android:textColor="@color/colorAccent"
            android:checked="true"
        android:layout_below="@+id/text5"
        android:layout_alignLeft="@+id/text4"
        android:layout_alignStart="@+id/text4" />

    <RadioButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/Quarter"
        android:textColor="@color/colorAccent"
        android:checked="true"
        android:layout_below="@+id/text4"
        android:layout_alignLeft="@+id/Half"
        android:layout_alignStart="@+id/Half" />

    <TextView
        android:text="Quarter"
        android:id="@+id/text5"
        android:textColor="?attr/colorButtonNormal"
        android:layout_height="40dp"
        android:textSize="18sp"
        android:layout_width="100dp"
        android:textAlignment="textStart"
        android:layout_alignBottom="@+id/Quarter"
        android:layout_toRightOf="@+id/Quarter"
        android:layout_toEndOf="@+id/Quarter"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp" />

    <TextView
        android:text="Half"
        android:layout_height="40dp"
        android:id="@+id/text6"
        android:textColor="?attr/colorButtonNormal"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:layout_width="100dp"
        android:layout_above="@+id/Full"
        android:layout_alignLeft="@+id/text5"
        android:layout_alignStart="@+id/text5" />

    <TextView
        android:text="Additions"
        android:layout_width="150dp"
        android:id="@+id/textView"
        android:textColor="?attr/colorButtonNormal"
        android:textSize="24sp"
        android:layout_below="@+id/Full"
        android:layout_alignLeft="@+id/Full"
        android:layout_alignStart="@+id/Full"
        android:layout_height="25dp" />

    <RadioButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:id="@+id/Boneless"
        android:textColor="@color/colorAccent"
        android:checked="true" />

    <TextView
        android:text="Boneless"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/textView2"
        android:textColor="?attr/colorButtonNormal"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/Boneless"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:textAlignment="center" />

    <TextView
        android:text="$23.70"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignLeft="@+id/text10"
        android:layout_alignStart="@+id/text10"
        android:id="@+id/textView3"
        android:textColor="?attr/colorButtonNormal"
        android:textSize="18sp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="150dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/Boneless"
        android:layout_alignLeft="@+id/Boneless"
        android:layout_alignStart="@+id/Boneless"
        android:text="Quantity"
        android:textColor="?attr/colorButtonNormal"
        android:textSize="24sp"
        android:layout_height="25dp" />

    <TextView
        android:text=" Butter Chicken"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/text1"
        android:textSize="24sp"
        android:textColor="?attr/colorButtonNormal"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/radioButton"
        android:layout_alignRight="@+id/text4"
        android:layout_alignEnd="@+id/text4" />

    <TextView
        android:id="@+id/text2"
        android:layout_height="60dp"
        android:text="Chicken chunks prepard in spicy,creamy,tomato and tested with butter"
        android:textColor="?attr/colorButtonNormal"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:layout_width="350dp"
        android:layout_below="@+id/radioButton"
        android:layout_alignLeft="@+id/text1"
        android:layout_alignStart="@+id/text1" />

    <TextView
        android:text="Total"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:id="@+id/textView5"
        android:layout_above="@+id/button"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textColor="?attr/colorButtonNormal" />

    <Button
        android:text="Save"
        android:layout_height="30dp"
        android:id="@+id/button"
        android:background="#00990f"
        android:layout_width="200dp"
        android:layout_marginBottom="11dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/radioButton"
        android:layout_alignEnd="@+id/radioButton" />

    <TextView
        android:text="$240.95"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/radioButton"
        android:layout_toEndOf="@+id/radioButton"
        android:id="@+id/textView7"
        android:textColor="?attr/colorButtonNormal"
        android:textSize="18sp"
        android:textAlignment="center" />


</RelativeLayout>
