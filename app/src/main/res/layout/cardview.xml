<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/Card_View"
        android:layout_height="120dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light">
        <ImageView
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:id="@+id/img_v1"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="120dp"
            android:layout_height="100dp" />

        <TextView
            android:layout_alignTop="@+id/img_v1"
            android:layout_toRightOf="@+id/img_v1"
            android:layout_toEndOf="@+id/img_v1"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:id="@+id/txt1"
            android:layout_height="40dp"
            android:layout_width="150dp"
            android:textSize="18sp"
            android:textColor="?attr/colorButtonNormal" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/di"
            android:layout_alignBottom="@+id/img_v1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="22dp"
            android:layout_marginEnd="22dp"
            android:id="@+id/img_v2" />

        <TextView
            android:text="Download Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_v2"
            android:layout_toLeftOf="@+id/img_v2"
            android:layout_toStartOf="@+id/img_v2"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp"
            android:id="@+id/txt2"
            android:textSize="12sp"
            android:textColor="?attr/colorButtonNormal" />

    </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>